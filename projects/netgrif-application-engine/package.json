{
    "name": "@netgrif/components-core",
    "version": "6.0.0-rc.5",
    "description": "Netgrif Application engine frontend core Angular library",
    "homepage": "https://components.netgrif.com",
    "license": "NETGRIF Community License",
    "repository": {
        "type": "git",
        "url": "https://github.com/netgrif/components.git"
    },
    "bugs": {
        "url": "https://github.com/netgrif/components/issues"
    },
    "author": {
        "name": "NETGRIF, s.r.o.",
        "email": "oss@netgrif.com",
        "url": "https://netgrif.com"
    },
    "keywords": [
        "netgrif",
        "application engine",
        "nae",
        "engine",
        "workflow engine",
        "components",
        "netgrif components",
        "nae components",
        "nae frontend"
    ],
    "scripts": {
        "nae:build": "ng build netgrif-application-engine --prod && npm run nae:build-schematics",
        "nae:build-schematics": "node projects/netgrif-application-engine/src/scripts/build-schematics.js",
        "nae:lint": "ng lint netgrif-application-engine",
        "nae:test": "ng test netgrif-application-engine",
        "nae:full-test": "npm run nae:lint && npm run nae:test",
        "nae:normalize-coverage-summary": "node scripts/normalize-file-paths.js coverage/netgrif-application-engine/coverage-summary.json",
        "nae:typedoc": "typedoc --tsconfig projects/netgrif-application-engine/tsconfig.lib.json  projects/netgrif-application-engine/src/lib",
        "nae:doc": "npm run nae:normalize-coverage-summary && compodoc -c projects/netgrif-application-engine/.compodocrc.json",
        "nae:local-build": "npm run nae:build && npm i ./dist/netgrif-application-engine --save-optional",
        "nae:prod-build": "npm run nae:full-test && npm run nae:sonar && npm run nae:build && npm run nae:doc",
        "nae:prod-build-without-tests": "ng lint netgrif-application-engine && npm run nae:sonar && npm run nae:build && npm run nae:doc"
    },
    "dependencies": {
        "palette-creator": "^0.5.4",
        "angular2-hotkeys": "^2.2.0",
        "tslib": "^1.11.1"
    },
    "peerDependencies": {
        "@angular-material-components/datetime-picker": "^4.0.5",
        "@angular-material-components/moment-adapter": "^4.0.1",
        "@angular/animations": "^10.2.3",
        "@angular/cdk": "^10.2.7",
        "@angular/common": "^10.2.3",
        "@angular/compiler": "^10.2.3",
        "@angular/core": "^10.2.3",
        "@angular/flex-layout": "^10.0.0-beta.32",
        "@angular/forms": "^10.2.3",
        "@angular/material": "^10.2.7",
        "@angular/material-moment-adapter": "^10.2.7",
        "@angular/platform-browser": "^10.2.3",
        "@angular/platform-browser-dynamic": "^10.2.3",
        "@angular/router": "^10.2.3",
        "@covalent/core": "^3.1.0",
        "@covalent/highlight": "^3.1.0",
        "@covalent/markdown": "^3.1.0",
        "@covalent/text-editor": "^3.1.0",
        "@ngx-translate/core": "^13.0.0",
        "@ngx-translate/http-loader": "^6.0.0",
        "@schematics/angular": "^10.2.0",
        "angular-resizable-element": "~3.3.0",
        "angular-resize-event": "^2.0.1",
        "angular2-hotkeys": "^2.2.0",
        "hammerjs": "^2.0.8",
        "json-schema-to-typescript": "^8.1.0",
        "jszip": "^3.2.2",
        "moment": "~2.24.0",
        "natural-orderby": "^2.0.3",
        "rxjs": "^6.6.0",
        "zone.js": "~0.10.2"
    },
    "schematics": "schematics/collection.json"
}
