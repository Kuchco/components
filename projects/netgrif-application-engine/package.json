{
    "name": "@netgrif/application-engine",
    "version": "4.0.0-rc.11",
    "scripts": {
        "build": "../../node_modules/.bin/tsc -p tsconfig.schematics.json",
        "copy:schemas": "cp --parents schematics/*/schema.json ../../dist/netgrif-application-engine/ && cp --parents schematics/*/*/schema.json ../../dist/netgrif-application-engine/",
        "copy:files": "cp --parents -pr schematics/*/*/files/** ../../dist/netgrif-application-engine/",
        "copy:collection": "cp schematics/collection.json ../../dist/netgrif-application-engine/schematics/collection.json",
        "postbuild": "npm run copy:schemas && npm run copy:files && npm run copy:collection"
    },
    "description": "Netgrif Application engine frontend Angular library",
    "homepage": "https://netgrif.com",
    "repository": {
        "type": "git",
        "url": "https://bitbucket.org/netgrif/nae-frontend.git"
    },
    "bugs": {
        "url": "https://netgrif.atlassian.net/browse/NAE"
    },
    "keywords": [
        "netgrif",
        "application engine",
        "nae",
        "engine",
        "workflow engine"
    ],
    "contributors": [
        "Milan Mladoniczky <mladoniczky@netgrif.com>",
        "Juraj Mažári <mazari@netgrif.com>",
        "Tomáš Kováčik <kovacik@netgrif.com>",
