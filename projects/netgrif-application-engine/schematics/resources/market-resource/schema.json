{
    "$schema": "http://json-schema.org/schema",
    "id": "SchematicsInitializeMarketResources",
    "title": "Create Market Resources",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description" : "Name resource",
            "x-prompt": {
                "type": "string",
                "message": "Name resource"
            }

        },
        "type": {
            "description" : "Type resource",
            "type":"string",
            "default": "json",
            "enum":[
                "json",
                "hal"
            ],
            "x-prompt": {
                "type": "list",
                "message": "Type resource",
                "items": [
                    "json",
                    "hal"
                ]
            }
        },
        "address": {
            "type": "string",
            "description" : "URL resource",
            "x-prompt": {
                "type": "string",
                "message": "URL resource"
            }

        }
    },
    "required": ["name"]
}
